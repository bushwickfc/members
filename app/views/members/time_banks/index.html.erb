<div class="page-header">
  <h1>Time bank for <%= @member.full_name %></h1>
</div>

<%= link_to 'New time_bank', new_member_time_bank_path(@member), role:'button', class:'btn btn-success' %>
<%= render 'shared/csv' %>
<%= render 'shared/breadcrumbs' %>

<table class="data-table">
  <thead>
    <tr>
      <th>Member</th>
      <th>Admin</th>
      <th>Committee</th>
      <th>Time type</th>
      <th>Approved</th>
      <th>Hours</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @time_banks.each do |time_bank| %>
      <tr>
        <td>
          <%= link_to image_tag("vcard.png", size: "20x20", alt: "profile #{member_name(time_bank, :member)}"), member_path(time_bank.member) %>&nbsp;
          <%= link_to member_name(time_bank, :member), member_path(time_bank.member) %>
        </td>
        <td>
					<%= link_to image_tag("vcard.png", size: "20x20", alt: "profile #{member_name(time_bank, :admin)}"), member_path(time_bank.admin_id) %>&nbsp;
          <%= link_to member_name(time_bank, :admin), member_path(time_bank.admin_id) %>
        </td>
        <td><%= search_link(time_bank, :committee_id){time_bank.committee.name} %></td>
        <td><%= search_link(time_bank, :time_type) %></td>
        <td><%= search_link(time_bank, :approved) %></td>
        <td><%= time_bank.hours %></td>
        <td>
          <%= link_to 'Show', member_time_bank_path(@member, time_bank), role:'button', class:'btn btn-info'  %>&nbsp;
          <%= link_to 'Edit', edit_member_time_bank_path(@member, time_bank), role:'button', class:'btn btn-primary'  %>&nbsp;
          <%= link_to 'Destroy', member_time_bank_path(@member, time_bank), role:'button', class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

