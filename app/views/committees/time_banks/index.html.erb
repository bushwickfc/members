<div class="page-header">
  <h1>Time bank for <%= @committee.name %></h1>
</div>

<%= link_to 'New time_bank', new_committee_time_bank_path(@committee), role:'button', class:'btn btn-success' %>
<%= render 'shared/csv' %>
<%= render 'shared/breadcrumbs' %>

<table class="data-table">
  <thead>
    <tr>
      <th>Member</th>
      <th>Admin</th>
      <th>Committee</th>
      <th>Time type</th>
      <th>Approved</th>
      <th>Hours</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @time_banks.each do |time_bank| %>
      <tr>
        <td>
          <%= link_to image_tag("vcard.png", size: "20x20", alt: "profile #{time_bank.member.full_name}"), member_path(time_bank.member) %>&nbsp;
          <%= link_to image_tag("clock.png", size: "15x15", alt: "time bank #{time_bank.member.full_name}"), member_time_banks_path(time_bank.member) %>
          <%= member_name(time_bank, :member) %>
        </td>
        <td>
          <%= link_to image_tag("vcard.png", size: "20x20", alt: "profile #{time_bank.admin.full_name}"), member_path(time_bank.admin.id) %>&nbsp;
          <%= link_to image_tag("clock.png", size: "15x15", alt: "time bank #{time_bank.admin.full_name}"), member_time_banks_path(time_bank.admin.id) %>
          <%= member_name(time_bank, :admin) %>
        </td>
        <td><%= committee_name(time_bank) %></td>
        <td><%= time_bank.time_type %></td>
        <td><%= search_link(time_bank, :approved) %></td>
        <td><%= time_bank.hours %></td>
        <td><%= time_bank.start %></td>
        <td><%= time_bank.finish %></td>
        <td>
          <%= link_to 'Show', committee_time_bank_path(@committee, time_bank), role:'button', class:'btn btn-info' %>
          <%= link_to 'Edit', edit_committee_time_bank_path(@committee, time_bank), role:'button', class:'btn btn-primary' %>
          <%= link_to 'Destroy', committee_time_bank_path(@committee, time_bank), role:'button', class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

